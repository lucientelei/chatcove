<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ambisiss.system.mapper.ChGroupMembersDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ambisiss.system.entity.ChGroupMembers">
        <id column="id" property="id" />
        <result column="group_id" property="groupId" />
        <result column="member_id" property="memberId" />
        <result column="group_nickname" property="groupNickname" />
        <result column="join_time" property="joinTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, group_id, member_id, group_nickname, join_time, update_time
    </sql>

    <!-- 查询用户群组群昵称 -->
    <select id="selectGroupNickname" resultType="java.lang.String">
        SELECT group_nickname FROM ch_group_members WHERE group_id = ${groupId} AND member_id = ${memberId};
    </select>
</mapper>
